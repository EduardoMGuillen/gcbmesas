// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  MESERO
  CAJERO
}

enum AccountStatus {
  OPEN
  CLOSED
}

enum LogAction {
  ACCOUNT_OPENED
  ACCOUNT_CLOSED
  ORDER_CREATED
  ORDER_CANCELLED
  ORDER_REJECTED
  PRODUCT_ADDED
  PRODUCT_UPDATED
  PRODUCT_ACTIVATED
  PRODUCT_DEACTIVATED
  PRODUCT_DELETED
  TABLE_CREATED
  TABLE_UPDATED
  TABLE_DELETED
  USER_CREATED
  USER_UPDATED
  USER_DELETED
  LOGIN
  LOGOUT
  EVENT_CREATED
  EVENT_UPDATED
  ENTRY_SOLD
  ENTRY_USED
}

enum EntryStatus {
  ACTIVE
  USED
  CANCELLED
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  name      String?
  password  String
  role      UserRole @default(MESERO)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  orders            Order[]
  logs              Log[]
  openedAccounts    Account[]
  pushSubscriptions PushSubscription[]
  createdEvents     Event[]
  createdEntries    Entry[]

  @@map("users")
}

model PushSubscription {
  id        String   @id @default(cuid())
  userId    String
  endpoint  String   @unique
  platform  String   @default("web")
  p256dh    String?
  auth      String?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("push_subscriptions")
}

model Table {
  id        String   @id @default(cuid())
  name      String
  zone      String?
  qrUrl     String?  @unique
  shortCode String   @unique @map("shortcode")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  accounts Account[]
  logs     Log[]

  @@map("tables")
}

model Account {
  id              String        @id @default(cuid())
  tableId         String
  initialBalance  Decimal       @db.Decimal(10, 2)
  currentBalance  Decimal       @db.Decimal(10, 2)
  status          AccountStatus @default(OPEN)
  createdAt       DateTime      @default(now())
  closedAt        DateTime?
  openedByUserId  String?
  clientName      String?

  table      Table   @relation(fields: [tableId], references: [id], onDelete: Cascade)
  openedBy   User?   @relation(fields: [openedByUserId], references: [id], onDelete: SetNull)
  orders     Order[]

  @@index([status, createdAt])
  @@index([tableId, status])
  @@map("accounts")
}

model Product {
  id        String   @id @default(cuid())
  name      String
  price     Decimal  @db.Decimal(10, 2)
  category  String?
  emoji     String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  orders Order[]

  @@map("products")
}

model Order {
  id        String   @id @default(cuid())
  accountId String
  productId String
  userId    String
  price     Decimal  @db.Decimal(10, 2)
  quantity  Int      @default(1)
  served    Boolean  @default(false)
  rejected  Boolean  @default(false)
  createdAt DateTime @default(now())

  account Account @relation(fields: [accountId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id])
  user    User    @relation(fields: [userId], references: [id])

  @@index([accountId])
  @@index([userId])
  @@index([createdAt])
  @@index([served, rejected, createdAt])
  @@index([accountId, rejected])
  @@map("orders")
}

model Log {
  id        String    @id @default(cuid())
  userId    String?
  tableId   String?
  action    LogAction
  details   Json?
  createdAt DateTime  @default(now())

  user  User?  @relation(fields: [userId], references: [id], onDelete: SetNull)
  table Table? @relation(fields: [tableId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([tableId])
  @@index([action])
  @@index([createdAt])
  @@map("logs")
}

model Event {
  id              String   @id @default(cuid())
  name            String
  date            DateTime
  coverPrice      Decimal  @db.Decimal(10, 2)
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  createdByUserId String?

  createdBy User?   @relation(fields: [createdByUserId], references: [id], onDelete: SetNull)
  entries   Entry[]

  @@index([isActive])
  @@index([date])
  @@map("events")
}

model Entry {
  id              String      @id @default(cuid())
  eventId         String
  clientName      String
  clientEmail     String
  numberOfEntries Int
  totalPrice      Decimal     @db.Decimal(10, 2)
  qrToken         String      @unique
  status          EntryStatus @default(ACTIVE)
  emailSent       Boolean     @default(false)
  createdAt       DateTime    @default(now())
  createdByUserId String?

  event     Event @relation(fields: [eventId], references: [id], onDelete: Cascade)
  createdBy User? @relation(fields: [createdByUserId], references: [id], onDelete: SetNull)

  @@index([eventId])
  @@index([qrToken])
  @@index([status])
  @@index([createdAt])
  @@map("entries")
}

